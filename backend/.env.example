# Focus 配置示例
# 复制此文件为 .env 并修改配置

# 应用配置
APP_NAME=Focus
APP_VERSION=0.1.0
DEBUG=false

# 服务器配置
HOST=0.0.0.0
PORT=8000
# 前端 URL（用于生成分享链接）
FRONTEND_URL=http://localhost:5173
# CORS 允许的来源，逗号分隔，* 表示允许所有
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
# 允许的 Host，逗号分隔，* 表示不启用 TrustedHost 中间件
ALLOWED_HOSTS=localhost,127.0.0.1

# 数据库配置
# SQLite (默认)
DATABASE_URL=sqlite+aiosqlite:///./focus_app.db
# PostgreSQL 示例
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/focus_app

# JWT 配置 (生产环境请修改!)
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# 默认用户配置 (单用户模式)
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=123456

# RSS 采集配置
RSS_FETCH_INTERVAL=30
RSS_FETCH_TIMEOUT=30
MAX_ENTRIES_PER_SOURCE=100

# 数据保留配置
UNMARKED_RETENTION_DAYS=30
TRASH_RETENTION_DAYS=15

# AI 配置
AI_PROVIDER=openai
AI_MODEL=gpt-4o-mini
AI_API_KEY=your-openai-api-key
# 如果使用代理或其他兼容 API
# AI_BASE_URL=https://api.openai.com/v1

# Zotero 配置 (可选)
# ZOTERO_LIBRARY_ID=your-library-id
# ZOTERO_LIBRARY_TYPE=user
# ZOTERO_API_KEY=your-zotero-api-key

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/focus_app.log
